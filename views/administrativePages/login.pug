extends ../layout/admin_layout
block css
    link(rel="stylesheet", href="/adminpage/administrative/admin.css")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    script(src="https://unpkg.com/sweetalert/dist/sweetalert.min.js")
    script(src="/favicon/fav.js" crossorigin="anonymous")
block content
    -var alertv = alerta
    .container.pt-1 
        div(role="alert", class="" + alerta) #{msg}
            button.close(type='button' data-dismiss='alert' aria-label='Close')
                span(aria-hidden='true' style="display:" + estilo + ";") &times;
        form.form-group(action="/admin/login", method="post")
            input.form-control#emailform(type="text", name="username", placeholder="username")
            input.form-control#passwordform(type="password", name="password", placeholder="password")
            button.btn.btn-submit(type="submit") Submit
        
block scripts
    script(src="https://cdn.jsdelivr.net/npm/lodash@4.17.15/lodash.min.js")
    script(src="/libsReact/react.development.js")
    script(src="/libsReact/react-dom.development.js")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous")